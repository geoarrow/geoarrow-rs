{
  "scripts": {
    "build": "bash ./scripts/build.sh",
    "build:test": "ENV='DEV' FEATURES='--all-features' yarn build",
    "build:geoparquet": "FEATURES='--no-default-features --features debug --features io_parquet --features io_parquet_compressions' NAME='@geoarrow/geoparquet-wasm' bash ./scripts/build.sh",
    "build:flatgeobuf": "FEATURES='--no-default-features --features debug --features io_flatgeobuf' NAME='@geoarrow/flatgeobuf-wasm' bash ./scripts/build.sh",
    "docs:build": "typedoc",
    "docs:serve": "cd docs_build && http-server",
    "docs:publish": "gh-pages --dist docs_build --dest js/",
    "test": "vitest run"
  },
  "devDependencies": {
    "@swc/core": "^1.3.83",
    "@swc/helpers": "^0.5.2",
    "@types/node": "^20.4.0",
    "apache-arrow": "^14.0.1",
    "arrow-js-ffi": "^0.3.0",
    "gh-pages": "^5.0.0",
    "http-server": "^14.1.1",
    "typedoc": "0.24.8",
    "typescript": "^4.6.2",
    "vitest": "^0.34.0"
  },
  "volta": {
    "node": "20.4.0",
    "yarn": "3.3.1"
  }
}
